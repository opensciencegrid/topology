#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""
A script to generate a SciTokens config for a StashCache origin in the OSG
"""
import argparse
import os
import sys

if __name__ == "__main__" and __package__ is None:
    _parent = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    sys.path.append(_parent + "/src")

import webapp.models
import stashcache

parser = argparse.ArgumentParser(description="Generate a SciTokens config for a StashCache origin server.")
parser.add_argument("fqdn", metavar="Cache_FQDN", help="FQDN of the origin for config generation.")

args = parser.parse_args()

global_data = webapp.models.GlobalData()

vodata = global_data.get_vos_data()
resource_groups = global_data.get_topology().get_resource_group_list()

origin_scitokens = stashcache.generate_origin_scitokens(vodata,
                                                      resource_groups,
                                                      fqdn=args.fqdn,
                                                      suppress_errors=False)
print(origin_scitokens, end="")  # config already has trailing newline
